<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_slide_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <FrameLayout
        android:id="@+id/layoutSaleOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationZ="100dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/image_slide_photo"
        app:layout_constraintTop_toTopOf="@id/image_slide_photo">

        <ImageView
            android:id="@+id/imageSaleOff"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_sale_off"
            android:backgroundTint="@color/red"
            android:scaleType="centerCrop"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textSaleOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:rotation="-45"
            android:text="-50%"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>