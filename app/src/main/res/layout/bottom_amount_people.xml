<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Đặt bàn cho"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageClose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="15dp"
        android:background="@null"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/layoutLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/background_shadow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle" />

    <LinearLayout
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutLine">

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/people1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_amount_people"
                android:backgroundTint="@color/custom_background_amount_people"
                android:button="@null"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:text="1 người"
                android:textColor="@color/custom_text_color_amount_people"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/people2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/background_amount_people"
                android:backgroundTint="@color/custom_background_amount_people"
                android:button="@null"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:text="2 người"
                android:textColor="@color/custom_text_color_amount_people"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/people1"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:id="@+id/people3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/background_amount_people"
                android:backgroundTint="@color/custom_background_amount_people"
                android:button="@null"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:text="3 người"
                android:textColor="@color/custom_text_color_amount_people"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/people2"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:id="@+id/people4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/background_amount_people"
                android:backgroundTint="@color/custom_background_amount_people"
                android:button="@null"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:text="4 người"
                android:textColor="@color/custom_text_color_amount_people"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/people3"
                app:layout_constraintTop_toTopOf="parent" />
        </RadioGroup>


        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/people8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/background_amount_people"
                android:backgroundTint="@color/custom_background_amount_people"
                android:button="@null"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:text="8 người"
                android:textColor="@color/custom_text_color_amount_people"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/people10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/background_amount_people"
                android:backgroundTint="@color/custom_background_amount_people"
                android:button="@null"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:text="10 người"
                android:textColor="@color/custom_text_color_amount_people"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/people12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/background_amount_people"
                android:backgroundTint="@color/custom_background_amount_people"
                android:button="@null"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:text="12 người"
                android:textColor="@color/custom_text_color_amount_people"
                android:textSize="16sp" />
        </RadioGroup>


    </LinearLayout>


    <EditText
        android:id="@+id/textAmountPeople"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:inputType="numberDecimal"
        android:layout_marginRight="15dp"
        android:background="@drawable/background_booking"
        android:hint="Nhập số lượng người"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroup" />

    <Button
        android:id="@+id/buttonSubmitAmount"
        style="@style/text_content"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/orange"
        android:text="Đồng ý"
        android:textAllCaps="false"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/white"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textAmountPeople"
        tools:layout_editor_absoluteX="13dp" />

</androidx.constraintlayout.widget.ConstraintLayout>